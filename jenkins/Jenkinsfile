pipeline{
    //agent any
    agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
        //docker { image 'node:16-alpine' }
    }
    stages{
        stage('build')
        {
            steps{
                echo "This is build stage"
            }
        }

        stage('test')
        {
            steps{
                echo "This is test stage"
            }
        }

        stage('deploy')
        {
            steps{
                echo "This is deploy stage"
            }
        }
    }
}